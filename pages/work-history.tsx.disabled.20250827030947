export default function WorkHistoryPage() {
  const router = useRouter()
  const [workHistory, setWorkHistory] = useState<WorkHistoryItem[]>([])
  const [filteredHistory, setFilteredHistory] = useState<WorkHistoryItem[]>([])
  const [loading, setLoading] = useState(true)
  const [searchQuery, setSearchQuery] = useState('')
  const [customerFilter, setCustomerFilter] = useState<string>('all')
  const [workTypeFilter, setWorkTypeFilter] = useState<string>('all')
  const [dateRange, setDateRange] = useState({ start: '', end: '' })
  const [selectedItem, setSelectedItem] = useState<WorkHistoryItem | null>(null)

  const filterHistory = useCallback(() => {
    let filtered = [...workHistory]

    if (searchQuery) {
      filtered = filtered.filter(item =>
        item.workName.toLowerCase().includes(searchQuery.toLowerCase()) ||
        item.customerName.toLowerCase().includes(searchQuery.toLowerCase()) ||
        item.subject.toLowerCase().includes(searchQuery.toLowerCase()) ||
        item.registrationNumber.toLowerCase().includes(searchQuery.toLowerCase()) ||
        item.invoiceNumber.toLowerCase().includes(searchQuery.toLowerCase())
      )
    }

    if (customerFilter !== 'all') {
      filtered = filtered.filter(item => item.category === customerFilter)
    }

    if (workTypeFilter !== 'all') {
      filtered = filtered.filter(item => item.workType === workTypeFilter)
    }

    if (dateRange.start) {
      filtered = filtered.filter(item => item.billingDate >= dateRange.start)
    }
    if (dateRange.end) {
      filtered = filtered.filter(item => item.billingDate <= dateRange.end)
    }

    filtered.sort((a, b) => new Date(b.billingDate).getTime() - new Date(a.billingDate).getTime())

    setFilteredHistory(filtered)
  }, [workHistory, searchQuery, customerFilter, workTypeFilter, dateRange])

  useEffect(() => {
    loadWorkHistory()
  }, [])

  useEffect(() => {
    filterHistory()
  }, [filterHistory])

  const loadWorkHistory = async () => {
    try {
      await new Promise(resolve => setTimeout(resolve, 1000))
      setWorkHistory(sampleWorkHistory)
    } catch (error) {
      console.error('Failed to load work history:', error)
    } finally {
      setLoading(false)
    }
  }

  const clearFilters = () => {
    setSearchQuery('')
    setCustomerFilter('all')
    setWorkTypeFilter('all')
    setDateRange({ start: '', end: '' })
  }

  const exportToCSV = () => {
    if (filteredHistory.length === 0) {
      alert('ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆã™ã‚‹ãƒ‡ãƒ¼ã‚¿ãŒã‚ã‚Šã¾ã›ã‚“')
      return
    }

    const headers = ['è«‹æ±‚æ›¸ç•ªå·', 'è«‹æ±‚æ—¥', 'é¡§å®¢å', 'ä»¶å', 'ç™»éŒ²ç•ªå·', 'ä½œæ¥­å', 'ç¨®é¡', 'æ•°é‡', 'å˜ä¾¡', 'åˆè¨ˆ', 'ã‚»ãƒƒãƒˆè©³ç´°']
    const csvContent = [
      headers.join(','),
      ...filteredHistory.map(item => [
        `"${item.invoiceNumber}"`,
        `"${item.billingDate}"`,
        `"${item.customerName}"`,
        `"${item.subject}"`,
        `"${item.registrationNumber}"`,
        `"${item.workName}"`,
        `"${item.workType === 'individual' ? 'å€‹åˆ¥' : 'ã‚»ãƒƒãƒˆ'}"`,
        item.quantity,
        item.unitPrice,
        item.total,
        `"${item.setDetails || ''}"`
      ].join(','))
    ].join('\n')

    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' })
    const link = document.createElement('a')
    const url = URL.createObjectURL(blob)
    link.setAttribute('href', url)
    link.setAttribute('download', `ä½œæ¥­å±¥æ­´_${new Date().toISOString().split('T')[0]}.csv`)
    link.style.visibility = 'hidden'
    document.body.appendChild(link)
    link.click()
    document.body.removeChild(link)
    URL.revokeObjectURL(url)
  }

  const getStatistics = () => {
    const totalItems = filteredHistory.length
    const totalAmount = filteredHistory.reduce((sum, item) => sum + item.total, 0)
    const avgPrice = totalItems > 0 ? totalAmount / totalItems : 0
    const uniqueWorkTypes = [...new Set(filteredHistory.map(item => item.workName))].length

    return { totalItems, totalAmount, avgPrice, uniqueWorkTypes }
  }

  const stats = getStatistics()

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50">
        <div className="container py-8">
          <div className="flex justify-center items-center h-64">
            <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            <span className="ml-2 text-lg text-gray-600">èª­ã¿è¾¼ã¿ä¸­...</span>
          </div>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gray-50">
      <div className="container py-6">
        {/* Header */}
        <div className="flex justify-between items-center mb-6">
          <div>
            <h1 className="text-3xl font-bold text-gray-900">ğŸ” ä½œæ¥­å±¥æ­´</h1>
            <p className="text-gray-600 mt-1">éå»ã®ä½œæ¥­å†…å®¹ãƒ»ä¾¡æ ¼æ¤œç´¢</p>
          </div>
          <div className="flex gap-2">
            <Button
              variant="secondary"
              onClick={() => router.push('/')}
            >
              â† æˆ»ã‚‹
            </Button>
            <Button
              variant="success"
              onClick={exportToCSV}
              disabled={filteredHistory.length === 0}
            >
              ğŸ“„ CSVã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆ
            </Button>
          </div>
        </div>

        {/* Statistics */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
          <Card>
            <CardContent>
              <div className="text-center py-4">
                <div className="text-2xl font-bold text-blue-600">{stats.totalItems}</div>
                <div className="text-sm text-gray-600">ä½œæ¥­ä»¶æ•°</div>
              </div>
            </CardContent>
          </Card>
          <Card>
            <CardContent>
              <div className="text-center py-4">
                <div className="text-2xl font-bold text-green-600">{formatCurrency(stats.totalAmount)}</div>
                <div className="text-sm text-gray-600">åˆè¨ˆé‡‘é¡</div>
              </div>
            </CardContent>
          </Card>
          <Card>
            <CardContent>
              <div className="text-center py-4">
                <div className="text-2xl font-bold text-yellow-600">{formatCurrency(stats.avgPrice)}</div>
                <div className="text-sm text-gray-600">å¹³å‡å˜ä¾¡</div>
              </div>
            </CardContent>
          </Card>
          <Card>
            <CardContent>
              <div className="text-center py-4">
                <div className="text-2xl font-bold text-purple-600">{stats.uniqueWorkTypes}</div>
                <div className="text-sm text-gray-600">ä½œæ¥­ç¨®é¡</div>
              </div>
            </CardContent>
          </Card>
        </div>

        {/* Search and Filters */}
        <Card className="mb-6">
          <CardHeader>
            <CardTitle className="flex items-center">
              ğŸ” æ¤œç´¢ãƒ»ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
              <Input
                placeholder="ä½œæ¥­åã€é¡§å®¢åã€ç™»éŒ²ç•ªå·ã§æ¤œç´¢"
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
              />
              
              <div>
                <label className="label">é¡§å®¢ã‚¿ã‚¤ãƒ—</label>
                <select
                  className="input-field"
                  value={customerFilter}
                  onChange={(e) => setCustomerFilter(e.target.value)}
                >
                  <option value="all">ã™ã¹ã¦</option>
                  <option value="UD">UD</option>
                  <option value="ãã®ä»–">ãã®ä»–</option>
                </select>
              </div>

              <div>
                <label className="label">ä½œæ¥­ç¨®é¡</label>
                <select
                  className="input-field"
                  value={workTypeFilter}
                  onChange={(e) => setWorkTypeFilter(e.target.value)}
                >
                  <option value="all">ã™ã¹ã¦</option>
                  <option value="individual">å€‹åˆ¥ä½œæ¥­</option>
                  <option value="set">ã‚»ãƒƒãƒˆä½œæ¥­</option>
                </select>
              </div>

              <Button
                variant="secondary"
                onClick={clearFilters}
              >
                ğŸ—‘ï¸ ã‚¯ãƒªã‚¢
              </Button>
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <Input
                type="date"
                label="é–‹å§‹æ—¥"
                value={dateRange.start}
                onChange={(e) => setDateRange(prev => ({ ...prev, start: e.target.value }))}
              />
              <Input
                type="date"
                label="çµ‚äº†æ—¥"
                value={dateRange.end}
                onChange={(e) => setDateRange(prev => ({ ...prev, end: e.target.value }))}
              />
            </div>
          </CardContent>
        </Card>

        {/* Work History List */}
        {filteredHistory.length === 0 ? (
          <Card>
            <CardContent>
              <div className="text-center py-12">
                <div className="text-4xl mb-4">ğŸ”§</div>
                <p className="text-gray-600">
                  {searchQuery || customerFilter !== 'all' || workTypeFilter !== 'all' || dateRange.start || dateRange.end
                    ? 'æ¤œç´¢æ¡ä»¶ã«ä¸€è‡´ã™ã‚‹ä½œæ¥­å±¥æ­´ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“'
                    : 'ä½œæ¥­å±¥æ­´ãŒã‚ã‚Šã¾ã›ã‚“'}
                </p>
              </div>
            </CardContent>
          </Card>
        ) : (
          <div className="space-y-4">
            {filteredHistory.map((item) => (
              <Card key={item.id} className="hover:shadow-md transition-shadow">
                <CardContent>
                  <div className="flex flex-col lg:flex-row lg:items-center justify-between p-4">
                    <div className="flex-1 space-y-3">
                      <div className="flex items-center justify-between">
                        <div className="flex items-center space-x-3">
                          <h3 className="text-lg font-semibold text-gray-900">
                            {item.workName}
                          </h3>
                          <span className={`px-2 py-1 rounded-full text-xs font-medium ${
                            item.workType === 'individual' 
                              ? 'bg-blue-100 text-blue-700' 
                              : 'bg-yellow-100 text-yellow-700'
                          }`}>
                            {item.workType === 'individual' ? 'å€‹åˆ¥' : 'ã‚»ãƒƒãƒˆ'}
                          </span>
                        </div>
                        <div className="text-lg font-bold text-green-600">
                          {formatCurrency(item.total)}
                        </div>
                      </div>

                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div className="flex items-center text-sm text-gray-600">
                          <span className="font-medium">{item.customerName}</span>
                          <span className="ml-2 px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs">
                            {item.category}
                          </span>
                        </div>
                        <div className="flex items-center text-sm text-gray-600">
                          ğŸ“… è«‹æ±‚æ—¥: {item.billingDate}
                        </div>
                      </div>

                      <div className="text-sm text-gray-700">
                        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                          <div>
                            <span className="font-medium">ä»¶å: </span>
                            {item.subject}
                          </div>
                          <div>
                            <span className="font-medium">ç™»éŒ²ç•ªå·: </span>
                            {item.registrationNumber}
                          </div>
                        </div>
                        <div className="mt-2 grid grid-cols-1 md:grid-cols-3 gap-4">
                          <div>
                            <span className="font-medium">æ•°é‡: </span>
                            {item.quantity}
                          </div>
                          <div>
                            <span className="font-medium">å˜ä¾¡: </span>
                            {formatCurrency(item.unitPrice)}
                          </div>
                          <div>
                            <span className="font-medium">è«‹æ±‚æ›¸: </span>
                            {item.invoiceNumber}
                          </div>
                        </div>
                        {item.setDetails && (
                          <div className="mt-2">
                            <span className="font-medium">ã‚»ãƒƒãƒˆå†…å®¹: </span>
                            <span className="text-xs bg-gray-50 p-1 rounded">{item.setDetails}</span>
                          </div>
                        )}
                      </div>
                    </div>

                    <div className="flex items-center space-x-2 mt-4 lg:mt-0">
                      <Button
                        variant="secondary"
                        size="sm"
                        onClick={() => setSelectedItem(item)}
                      >
                        ğŸ‘ï¸ è©³ç´°
                      </Button>
                    </div>
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>
        )}

        {/* Detail Modal */}
        {selectedItem && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
            <div className="bg-white rounded-xl p-6 max-w-2xl w-full max-h-[90vh] overflow-auto">
              <h3 className="text-xl font-bold text-gray-900 mb-4">
                ä½œæ¥­è©³ç´° - {selectedItem.workName}
              </h3>
              
              <div className="space-y-4">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <div className="text-sm font-medium text-gray-700">ä½œæ¥­å</div>
                    <div className="text-gray-900">{selectedItem.workName}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">ä½œæ¥­ç¨®é¡</div>
                    <div className="text-gray-900">
                      {selectedItem.workType === 'individual' ? 'å€‹åˆ¥ä½œæ¥­' : 'ã‚»ãƒƒãƒˆä½œæ¥­'}
                    </div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">é¡§å®¢å</div>
                    <div className="text-gray-900">{selectedItem.customerName}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">è«‹æ±‚æ—¥</div>
                    <div className="text-gray-900">{selectedItem.billingDate}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">æ•°é‡</div>
                    <div className="text-gray-900">{selectedItem.quantity}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">å˜ä¾¡</div>
                    <div className="text-gray-900">{formatCurrency(selectedItem.unitPrice)}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">åˆè¨ˆ</div>
                    <div className="text-gray-900 font-bold">{formatCurrency(selectedItem.total)}</div>
                  </div>
                  <div>
                    <div className="text-sm font-medium text-gray-700">è«‹æ±‚æ›¸ç•ªå·</div>
                    <div className="text-gray-900">{selectedItem.invoiceNumber}</div>
                  </div>
                  <div className="md:col-span-2">
                    <div className="text-sm font-medium text-gray-700">ä»¶å</div>
                    <div className="text-gray-900">{selectedItem.subject}</div>
                  </div>
                  <div className="md:col-span-2">
                    <div className="text-sm font-medium text-gray-700">ç™»éŒ²ç•ªå·</div>
                    <div className="text-gray-900">{selectedItem.registrationNumber}</div>
                  </div>
                  {selectedItem.setDetails && (
                    <div className="md:col-span-2">
                      <div className="text-sm font-medium text-gray-700">ã‚»ãƒƒãƒˆå†…å®¹</div>
                      <div className="text-gray-900 bg-gray-50 p-3 rounded">{selectedItem.setDetails}</div>
                    </div>
                  )}
                </div>
              </div>
              
              <div className="flex justify-end mt-6">
                <Button
                  variant="secondary"
                  onClick={() => setSelectedItem(null)}
                >
                  é–‰ã˜ã‚‹
                </Button>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  )
}