  id: string
  invoiceNumber: string
  billingDate: string
  customerName: string
  subject: string
  registrationNumber: string
  workName: string
  workType: 'individual' | 'set'
  quantity: number
  unitPrice: number
  total: number
  setDetails?: string
  category: 'UD' | 'ãã®ä»–'
  createdAt: string
}

