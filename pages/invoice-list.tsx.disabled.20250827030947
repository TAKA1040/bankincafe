  id: string
  invoiceNumber: string
  billingDate: string
  customerCategory: 'UD' | 'ãã®ä»–'
  customerName: string
  subject: string
  registrationNumber?: string
  orderNumber?: string
  subtotal: number
  tax: number
  total: number
  status: 'draft' | 'finalized' | 'sent' | 'paid'
  createdAt: string
  updatedAt: string
}

