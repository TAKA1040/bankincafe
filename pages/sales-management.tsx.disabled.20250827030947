  id: string
  month: string
  totalRevenue: number
  invoiceCount: number
  customerCount: number
  averageOrderValue: number
  udRevenue: number
  otherRevenue: number
  topCustomers: Array<{
    name: string
    revenue: number
    invoiceCount: number
  }>
}

